{
  "builders": [
    {
      "type": "qemu",
      "accelerator": "kvm",
      "boot_wait": "5m",
      "disk_compression": "{{ user `compress`}}",
      "disk_size": "{{user `disk_size`}}",
      "format": "{{user `disk_format`}}",
      "floppy_files": "{{ user `floppy_files_list` }}",
      "headless": true,
      "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
      "iso_urls": [ "{{ user `iso_url` }}" ],
      "output_directory": "output-{{user `name`}}",
      "qemuargs": [[ "-m", "4096M" ],[ "-cpu", "Westmere" ],[ "-m", "{{ user `memory` }}" ],[ "-smp", "cpus={{ user `cpus`}}" ]],
      "shutdown_command": "C:\\Windows\\packer\\shutdown.bat",
      "shutdown_timeout": "1h",
      "vm_name": "{{user `name`}}",
      "communicator": "winrm",
      "winrm_insecure": "true",
      "winrm_use_ssl": "true",
      "winrm_username": "{{user `packer_user`}}",
      "winrm_password": "{{user `packer_pass`}}",
      "winrm_port": "5986",
      "winrm_timeout": "4h"
    },
    {
      "type": "vsphere-iso",
      "vm_name": "{{user `name`}}-{{timestamp}}",
      "CPUs": "{{user `cpus`}}",
      "RAM": "{{user `memory`}}",
      "RAM_reserve_all": true,
      "communicator": "winrm",
      "convert_to_template": "true",
      "cluster": "{{user `vsphere-cluster`}}",
      "datacenter": "{{user `vsphere-datacenter`}}",
      "datastore": "{{user `vsphere-datastore`}}",
      "username": "{{user `vsphere-user`}}",
      "vcenter_server": "{{user `vsphere-server`}}",
      "disk_controller_type": "pvscsi",
      "firmware": "bios",
      "floppy_files": "{{ user `floppy_files_list` }}",
      "folder": "{{user `vsphere-folder`}}",
      "guest_os_type": "windows9Server64Guest",
      "insecure_connection": "true",
      "shutdown_command": "C:\\Windows\\packer\\shutdown.bat",
      "shutdown_timeout": "1h",
      "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
      "iso_paths": [ "[] /vmimages/tools-isoimages/windows.iso" ],
      "iso_urls": [ "{{ user `iso_url` }}" ],
      "network_adapters": [ { "network": "{{user `vsphere-network`}}", "network_card": "vmxnet3" } ],
      "password": "{{user `vsphere-password`}}",
      "storage": [ { "disk_size": "{{user `disk_size`}}", "disk_thin_provisioned": true } ],
      "winrm_timeout": "4h",
      "winrm_use_ssl": "true",
      "winrm_insecure": "true",
      "winrm_password": "{{user `packer_pass`}}",
      "winrm_username": "{{user `packer_user`}}"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/unlimited-password-expiration.bat",
        "scripts/uac-disable.bat",
        "scripts/disable-hibernate.bat"
      ],
      "type": "windows-shell"
    },
    {
      "pause_before": "60s",
      "type": "powershell",
      "scripts": [
        "scripts/set_firewall_rules.ps1",
        "scripts/install-choco.ps1",
        "scripts/Set-PowerSettings.ps1",
        "scripts/Set-WindowsTelemetrySettings.ps1",
        "scripts/dis-updates.ps1"
      ]
    },
    {
      "inline": [
        "Write-Host \"Installing Tools\"",
        "choco install googlechrome 7zip notepadplusplus choco-cleaner git.install bginfo procexp",
        "New-Item -Path 'C:\\Windows\\Setup\\Scripts' -ItemType Directory -Force",
        "New-Item -Path \"C:\\Windows\\packer\" -ItemType Directory -Force"
      ],
      "type": "powershell"
    },
    {
      "type": "file",
      "sources": [ "autounattend/sysprep/unattended.xml","scripts/shutdown.bat","scripts/install_aws_components.ps1"],
      "destination": "C:\\Windows\\packer\\"
    },
    {
      "type": "file",
      "source": "scripts/bginfo.bgi",
      "destination": "C:\\ProgramData\\chocolatey\\lib\\bginfo\\Tools\\"
    },
    {
      "type": "powershell",
      "environment_vars": ["AWS={{ build `enable_aws_tool`}}"],
      "inline": ["if ($env:AWS -eq \"true\" ) { . C:\\Windows\\packer\\install_aws_components.ps1}  "]
    },

    {
      "type": "file",
      "source": "scripts/SetupComplete.cmd",
      "destination": "C:\\Windows\\Setup\\Scripts\\SetupComplete.cmd"
    },
    {
      "script": "scripts/cleanup.ps1",
      "type": "powershell"
    }

  ],
  "post-processors": [
      {
        "type": "shell-local",
        "name": "fix-output-qcow2",
        "only": ["qemu"],
        "inline": [
	"mv output-{{user `name`}}/{{user `name`}} output/{{user `name`}}-{{timestamp}}.qcow2",
       	"rm -rvf output-{{user `name`}}/"
	]
      },
      {
        "type": "shell-local",
        "name": "gcp",
        "only": ["qemu"],
        "inline": [
	 "mv output-{{user `name`}}/{{user `name`}} disk.raw",
	 "tar -cf - disk.raw |pigz > {{user `name`}}.tar.gz",
	 "rm -vf disk.raw",
         "gsutil cp {{user `name`}}.tar.gz gs://{{user `gcs_bucket`}}/{{user `name`}}-{{timestamp}}.tar.gz",
         "gcloud compute images create {{user `name`}}-{{timestamp}} \\",
         "--source-uri=gs://{{user `gcs_bucket`}}/{{user `name`}}-{{timestamp}}.tar.gz \\",
         "--family={{user `name`}}",
         "rm -rvf output-{{user `name`}}/",
	 "rm -vf {{user `name`}}.tar.gz"
        ]
      },
    {
     "type": "shell-local",
     "name": "convert-to-ova",
     "only": ["vsphere-iso"],
     "inline": [
        "/usr/bin/ovftool output_{{user `name`}}/{{user `name`}}.ovf output_{{user `name`}}/{{user `name`}}.ova",
        "rm -vf output_{{user `name`}}/{{user `name`}}.ovf output_{{user `name`}}/{{user `name`}}.mf output_{{user `name`}}/{{user `name`}}-disk-0.vmdk"
     ]
    },
    {
      "only": ["vsphere-iso"],
      "files": [ "output_{{user `name`}}/{{user `name`}}.ova" ],
      "type": "artifice"
    },
    {
      "type": "amazon-import",
      "only": ["vsphere-iso"],
      "name": "aws",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "s3_bucket_name": "{{user `aws_s3_bucket_name`}}",
      "s3_key_name": "{{user `name`}}.ova",
      "keep_input_artifact": false,
      "license_type": "BYOL",
      "tags": {
        "Description": "packer amazon-import {{timestamp}}"
      }
    }
    ]



}
